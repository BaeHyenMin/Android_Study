<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="shop.rankmarket.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_fragment_detail"
            app:destination="@id/fragment_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="shop.rankmarket.ui.dashboard.DashboardFragment"
        android:label="@string/title_chatting"
        tools:layout="@layout/fragment_chatting" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="shop.rankmarket.ui.notifications.NotificationsFragment"
        android:label="@string/title_usrInfo"
        tools:layout="@layout/fragment_usrinfo" />
    <fragment
        android:id="@+id/fragment_detail"
        android:name="shop.rankmarket.ui.detail.FragmentDetail"
        android:label="fragment_fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_fragment_detail_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
</navigation>